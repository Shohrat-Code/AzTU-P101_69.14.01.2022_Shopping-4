
@{
    ViewData["Title"] = "CreateSizeToColorToProduct";
}


<div class="container">
    <form asp-area="admin" asp-controller="product" asp-action="CreateSizeToColorToProduct" method="post">
        <div class="itemContainer">
            @{ int i = 0;}
            @foreach (var item in ViewBag.Colors)
            {
                <div class="row ColorImageItem mb-5" data-index="@(i+1)">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label">Color: <b class="text-danger">@item.Name</b></label>
                        </div>
                    </div>
                    <div class="col-lg-12 SizeToColorContainer">
                        <div class="row SizeToColorItem">
                            <div class="col-lg-4">
                                <div class="mb-3">
                                    <label for="[@i].SizeId" class="form-label">Size</label>
                                    <select class="form-control" name="[@i].SizeId" asp-items="@(new SelectList(ViewBag.Sizes, "Id", "Name"))">
                                        <option selected>Select size</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-3">
                                    <label for="[@i].Price" class="form-label">Price</label>
                                    <input type="number" class="form-control" name="[@i].Price">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-3">
                                    <label for="[@i].Quantity" class="form-label">Quantity</label>
                                    <input type="number" class="form-control" name="[@i].Quantity">
                                </div>
                            </div>
                            <input hidden class="form-control" name="[@i].ColorId" value="@item.Id">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-success addNewItem" data-index="@(i+1)">+</button>
                    </div>

                    <hr />
                </div>

                i++;
            }
        </div>

        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Next</button>
            </div>
        </div>

    </form>
</div>

