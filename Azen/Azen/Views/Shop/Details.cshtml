@model Product
<div class="site page-content woocommerce">

    <div class="breadcrumb-contact-us breadcrumb-section section-box">
        <div class="container breadcrumb-inner">
            <div class="breadcrumbs-wrapper">
                <ul class="phys-breadcrumb">
                    <li><a href="index.html" class="home">Home</a></li>
                    <li><a href="shop.html" class="home">Shop</a></li>
                    <li>Product Simple</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="content-area shop-single-v1-section container">
        <div class="product">
            <div class="product-top-image">
                <div class="images">
                    <div id="slider" class="flexslider">
                        <div class="flex-viewport">
                            <ul class="slides">
                                @foreach (var item in Model.ColorToProducts)
                                {
                                    foreach (var item2 in item.ProductImages)
                                    {
                                        <li>
                                            <a href="#" class="swipebox" title="">
                                                <img src="~/Uploads/@item2.Image"
                                                     class="attachment-shop_single size-shop_single wp-post-image" alt="#">
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div id="carousel" class="flexslider thumbnail_product">
                        <div class="flex-viewport">
                            <ul class="slides">
                                @{ int i = 1;}
                                @foreach (var item in Model.ColorToProducts)
                                {
                                    foreach (var item2 in item.ProductImages)
                                    {
                                        <li class="@(i==1?"flex-active-slide":"")">
                                            <img src="~/Uploads/@item2.Image"
                                                 class="attachment-thumbnail size-thumbnail wp-post-image" alt="#">
                                        </li>
                                    }

                                    i++;
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="summary entry-summary">
                    <h1 class="product_title entry-title">@Model.Name</h1>
                    <span class="rating">
                        <span class="star-rating">
                            <i class="fa fa-star "></i> <i class="fa fa-star "></i> <i class="fa fa-star "></i> <i class="fa fa-star "></i> <i class="fa fa-star-o "></i>
                        </span>
                        <span class="number-review">( 2 customer reviews )</span>
                    </span>
                    <p class="price">
                        <span class="woocommerce-Price-amount amount">
                            <span class="woocommerce-Price-currencySymbol">$</span>@Model.ColorToProducts.FirstOrDefault().SizeColorToProducts.FirstOrDefault().Price
                        </span>
                    </p>
                    <div class="woocommerce-product-details__short-description">
                        <p>@Model.About</p>
                    </div>
                    <form class="cart" action="#" method="post"
                          enctype="multipart/form-data">
                        <div>
                            <div class="btn-group">
                                <button type="button" class="prev btn ">-</button>
                                <button type="button" class="show-number btn ">1</button>
                                <button type="button" class="next btn ">+</button>
                            </div>
                            <div class="btn-add-to-cart">
                                <a href="#" class="btn add-to-cart">ADD TO CART</a>
                            </div>
                        </div>
                    </form>
                    <div class="yith-wcwl-add-button">
                        <a href="wishlist.html"><i class="fa fa-heart"></i> <span>Add to Wishlist</span></a>
                    </div>
                    <div class="product_meta">
                        <span class="sku_wrapper">SKU: <span class="sku">@Model.SKU</span></span>
                        <span class="posted_in">
                            Categories:
                            <a href="shop.html" rel="tag">@Model.ProductCategory.Name</a>,
                        </span>
                        <span class="tagged_as">
                            Tag:
                            @foreach (var item in Model.ProductTagToProducts)
                            {
                                <a href="shop.html" rel="tag">@item.ProductTag.Name</a>
                            }
                        </span>

                    </div>
                    <div class="product-share">
                        <span>Share </span>
                        <div class="item-social">
                            <a class="face" title="Share on Facebook"
                               href="http://www.facebook.com/sharer.php?">#facebook</a>
                            <a class="twitter" title="Tweet this!"
                               href="https://twitter.com/intent/tweet?">#twitter</a>
                            <a class="google"
                               href="https://plus.google.com/share?url=">#google</a>
                        </div>
                    </div>
                </div>
            </div>

            <!--tabs-->
            <div class="woocommerce-tabs wc-tabs-wrapper">
